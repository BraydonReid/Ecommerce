# Copy this file to .env for local development
# Never commit .env files to version control

# Database - Use a local PostgreSQL or managed service
DATABASE_URL="postgresql://postgres:password@localhost:5432/green_ecommerce?schema=public"

# Shopify - Get from Shopify Partners Dashboard
SHOPIFY_API_KEY="your_api_key"
SHOPIFY_API_SECRET="your_api_secret"
SHOPIFY_SCOPES="read_orders,read_products,read_shipping"
SHOPIFY_HOST="http://localhost:3000"  # Change to ngrok URL for webhook testing

# Stripe - Get from Stripe Dashboard
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_BASIC_PRICE_ID="price_..."
STRIPE_PREMIUM_PRICE_ID="price_..."

# OpenAI (Optional) - For AI insights feature
OPENAI_API_KEY="sk-..."

# Climatiq (Optional) - For accurate carbon calculations
CLIMATIQ_API_KEY=""

# NextAuth - Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate_a_random_secret_here"

# Environment
NODE_ENV="development"
